{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    // TODO: change to true
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "paths": {
      "@abstract-money/core": ["packages/core/src"],
      "@abstract-money/core/*": ["packages/core/src/*"],
      "@abstract-money/react": ["packages/react/src"],
      "@abstract-money/react/*": ["packages/react/src/*"],
      "@abstract-money/cosmwasm": ["packages/cosmwasm/src"],
      "@abstract-money/cosmwasm/*": ["packages/cosmwasm/src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "types": ["node"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": [
    "examples/**/*",
    "packages/**/*",
    "scripts/**/*"
  ]
}

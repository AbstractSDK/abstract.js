  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@keplr-wallet/types": "^0.12.44",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "rimraf": "^3.0.0",
    "rome": "^12.1.2",
    "simple-git-hooks": "^2.8.1",
    "ts-pattern": "^4.0.6",
    "tslib": "^2.3.1"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",

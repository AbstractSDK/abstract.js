{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "lib": [
      "es2018",
      "dom"
    ],
    "importHelpers": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "stories",
    "tests",
    "jest.config.ts",
    "jest.config.*.ts",
    "generated"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}

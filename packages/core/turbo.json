{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": [
        "@abstract-money/cosmwasm#build",
        "@abstract-money/cli#build",
        "codegen:abstract",
        "codegen:subgraph",
        "clean"
      ],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": [
        "@abstract-money/cosmwasm#dev",
        "@abstract-money/cli#dev",
        "codegen:abstract",
        "codegen:subgraph",
        "clean"
      ],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": [
        "@abstract-money/cosmwasm#build",
        "@abstract-money/cli#build",
        "codegen:abstract",
        "codegen:subgraph",
        "clean"
      ]
    },
    "clean": {
      "cache": false
    },
    "codegen:abstract": {
      "dependsOn": ["@abstract-money/cli#build", "clean"],
      "outputs": ["src/_cli-generated/**"]
    },
    "codegen:subgraph": {
      "cache": false
    }
  }
}
